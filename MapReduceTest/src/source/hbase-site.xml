<configuration>
	<property>
		<name>hbase.rootdir</name>
		<value>hdfs://HDN3:9000/hbase</value>
		<description>must use hostname, cannot use ip</description>
	</property>
	<property>
		<name>hbase.cluster.distributed</name>
		<value>true</value>
	</property>
	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>HDN1,HDN2,HDN3</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.dataDir</name>
		<value>/home/storage/zookeeper</value>
	</property>
	<property>
		<name>hbase.master.info.bindAddress</name>
		<value>192.168.0.246</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.clientPort</name>
		<value>21818</value>
	</property>
	<property>
		<name>hbase.regionserver.handler.count</name>
		<value>100</value>
	</property>
	<property>
		<name>hbase.regionserver.global.memstore.upperLimit</name>
		<value>0.25</value>
	</property>
	<property>
		<name>hfile.block.cache.size</name>
		<value>0.35</value>
	</property>
	<property>
		<name>hbase.client.scanner.caching</name>
		<value>10</value>
	</property>
</configuration>


